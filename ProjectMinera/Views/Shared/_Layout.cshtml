<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Minera Pitaya", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <ul class="nav navbar-nav">
                <li class="active">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })</li>
                @if (User.IsInRole(ProjectMinera.Models.ApplicationUser.RoleNames.ADMIN))
                {
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Administración
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Usuarios", "Index", "Account")</li>
                            <li>@Html.ActionLink("Tipos de Proveedores", "Index", "TiposProveedores")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Proveedores
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Proveedores", "Index", "Proveedores")</li>
                            <li>@Html.ActionLink("Productos", "Index", "Productos")</li>
                        </ul>
                    </li>
                }

                @if (User.IsInRole(ProjectMinera.Models.ApplicationUser.RoleNames.Gerente))
                {
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            Proveedores
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Empleados", "Index", "Account")</li>
                            <li>@Html.ActionLink("Proveedores", "Index", "Proveedores")</li>
                            <li>@Html.ActionLink("Productos", "Index", "Productos")</li>
                        </ul>
                    </li>
                }


            </ul>
            <div class="navbar-right, body-content">@Html.Partial("_LoginPartial")</div>
        </div>
    </nav>
 
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
